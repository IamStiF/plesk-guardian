<?xml version="1.0" encoding="UTF-8"?>
<extension>
    <id>plesk-guardian</id>
    <name>Plesk Guardian</name>
    <vendor>SQLatte Group</vendor>
    <version>1.0.3</version>

    <description>
        Centralized security dashboard for multi-WordPress monitoring in Plesk.
        Provides real-time security insights, vulnerability scanning, and
        integration with WP Toolkit for centralized management.
    </description>

    <url>https://grupo.sqlatte.dedyn.io</url>
    <visible>true</visible>

    <access>
        <admin>true</admin>
        <reseller>false</reseller>
        <client>false</client>
    </access>

    <!-- Declara el modo MVC -->
    <controllers>
        <controller>Main</controller>
    </controllers>

    <!-- Declara los hooks -->
    <hooks>
        <hook>IndexHook.php</hook>
    </hooks>

    <!-- Configuración mínima requerida -->
    <requires>
        <plesk>18.0</plesk>
    </requires>

    <!-- Icono opcional (si aun no se agrega uno, se debe colocar en resources/img/icon.png) -->
    <!-- <icon>resources/img/icon.png</icon> -->
</extension>
