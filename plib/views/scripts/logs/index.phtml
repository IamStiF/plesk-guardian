<div class="pg-central-logs">
  <h2>Consola Centralizada de Logs</h2>

  <?php if (!empty($this->entries)): ?>
    <table class="table" style="width:100%; border-collapse:collapse;">
      <thead>
        <tr>
          <th>Dominio</th>
          <th>Fecha/Hora</th>
          <th>Severidad</th>
          <th>Evento</th>
          <th>Actor</th>
          <th>Mensaje</th>
        </tr>
      </thead>
      <tbody>
        <?php foreach ($this->entries as $e): ?>
          <tr>
            <td><strong><?= htmlspecialchars($e['domain']) ?></strong></td>
            <td><?= htmlspecialchars($e['datetime']) ?></td>
            <td><span style="color:<?= $e['severity']=='ERROR'?'red':($e['severity']=='WARN'?'orange':'#0af') ?>;">
              <?= htmlspecialchars($e['severity']) ?>
            </span></td>
            <td><?= htmlspecialchars($e['event']) ?></td>
            <td><?= htmlspecialchars($e['actor']) ?></td>
            <td style="white-space:pre-wrap;"><?= htmlspecialchars($e['message']) ?></td>
          </tr>
        <?php endforeach; ?>
      </tbody>
    </table>
  <?php else: ?>
    <p>No se encontraron logs en los dominios configurados.</p>
  <?php endif; ?>
</div>
